    "version": "0.1.0",
    "configurations": [        

        {
            "name": "attach to Chrome",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "url": "http://localhost/DeezerAccountInfoCopier/app",
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}/app"
        },
        {
            "name": "Launch index.html (without sourcemaps)",
            "type": "chrome",
            "request": "attach",
            "file": "${workspaceRoot}/app/index.html",
            "url": "http://localhost/DeezerAccountInfoCopier/app",
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}/app"
        }
    ]
}